<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="right"
	android:paddingRight="5dip" android:background="#FFFFFF">
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LinearLayout" android:orientation="horizontal" android:background="@drawable/bottombar_landscape_565" android:layout_marginRight="2px" android:layout_marginLeft="40px"><include layout="@layout/sms_message_text" /></LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<ImageView android:id="@+id/ImageView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/bubblebottom"></ImageView><TextView
			android:id="@+id/sender"
			android:textStyle="bold"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#666"
			android:paddingRight="5dip"
			android:text="@string/me"
		/>
		<TextView
			android:id="@+id/when"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#666"
		/>
	

</LinearLayout>

</LinearLayout>